<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- 使用bean标签的autowire属性设置自动装配效果，自动装配方式：byType -->
    <!-- byType：根据类型匹配IOC容器中的某个兼容类型的bean，为属性自动赋值 -->
    <!-- 若在IOC中，没有任何一个兼容类型的bean能够为属性赋值，则该属性不装配，即值为默认值null -->
    <!-- 若在IOC中，有多个兼容类型的bean能够为属性赋值，则抛出异常NoUniqueBeanDefinitionException -->
    <bean id="userController" class="com.zt.spring6.bean.autowire.UserController" autowire="byType"/>
    <bean id="userService" class="com.zt.spring6.bean.autowire.UserServiceImpl" autowire="byType"/>
    <bean id="userDAO" class="com.zt.spring6.bean.autowire.UserDAOImpl"/>

</beans>